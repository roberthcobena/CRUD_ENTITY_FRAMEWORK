@model List<CRUD_ENTITY_FRAMEWORK.Models.ViewModels.ListProductosViewModel>
@{
    ViewBag.Title = "Mis Productos";
}

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:right; padding=5p">
    <a href="../Producto/Nuevo" class="btn btn-success">Agregar</a>
    <div class="col-md-12">
        <table class="table responsive">
            <tr>
                <th>#</th>
                <th>Producto</th>
                <th>Descripción</th>
                <th>Marca</th>
                <th>Precio</th>
                <th>Stock</th>
            </tr>
            @foreach(var oElemento in Model)
            {
        <tr>
            <td>@oElemento.Id</td>
            <td>@oElemento.Nombre</td>
            <td>@oElemento.Descripcion</td>
            <td>@oElemento.Marca</td>
            <td>@oElemento.Precio</td>
            <td>@oElemento.Stock</td>
        </tr>
            }
        </table>
    </div>

</div>
